{{parent()}}
    <script>
        function ligne() {
            var table = $("#tablecsv");
            var rowNum = getElementById("myTable").rows.length;
            var resultHtml = '';
    
            for(var i = 0 ; i < rowNum ; i++) {
                resultHtml += ["<tr>", 
            "<td>", 
            "</td>",
            '<td></td>',
            '<td></td>',
            '</tr>'].join("\n");
            }  
            
            table.html(resultHtml);
            return false; 
        };
