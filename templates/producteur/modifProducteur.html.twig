{% extends 'base.html.twig' %}
{% block title %}{{ parent()}} - Modifier un Producteur{% endblock %}
{% block stylesheets %}
    {{ parent()}}
            
{% endblock %}
{% block content %}

<div class="container-fluid">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">
				Modifier un Producteur
			</h1>
		</div>
		<div class="row justify-content-center">
			<div class="col-8 p-4 m-0 text-primary">
				{{ form_start(form) }}
				<div class="form-group mx-auto text-center w-25 p-3">
					{{ form_label(form.nom, 'Nom : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}
					) }}
					{{ form_label(form.adresse, 'Adresse : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}
					) }}
					{{ form_label(form.telephone, 'Téléphone : ', {'label_attr': {'class': 'font-weightbold'}}
					) }}
					{{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}
					) }}

                   
				</div>
                <div class="form-group mx-auto text-center w-25 p-3">
				{{ form_widget(form.modif_producteur, { 'label': "Modifier", 'attr': {'class': 'btn font-weightbold bg-primary text-white mx-auto text-center'}}) }}
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
    {% block javascripts %}
        {{ parent()}}
    {% endblock %}

{% endblock %}